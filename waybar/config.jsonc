{
    "margin-top": 5,
    "margin-left": 10,
    "margin-right": 10,
    "height": 38,
    "modules-left": [
        "custom/systeminfo",
        "custom/socialmedia",
        "custom/ai",
        "hyprland/window"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "tray",
        "group/storage",
        "pulseaudio",
        "battery",
        "clock",
        "custom/power"
    ],
    "custom/socialmedia" : {
        "format": "",
        "tooltip-format": "Social Media",
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/social_media_menu.xml",
        "menu-actions": {
            "reddit": "brave https://reddit.com",
            "twitter": "brave https://x.com"
        }
    },
    "custom/ai" : {
        "format": "󰧑",
        "tooltip-format": "AI",
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/ai_menu.xml",
        "menu-actions": {
            "deepseek": "brave https://chat.deepseek.com",
            "misrtal": "brave https://chat.misrtal.ai"
        }
    },
    "hyprland/window": {
        "format": "{initialTitle}",
        "max-length": 35,
        "rewrite": {
            "": "Hyprland"
        },
        "icon": true,
        "separate-outputs": true
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "\uebb4",
            "default": "\uebb5"
        },
        "on-click": "activate",
        "sort-by-number": true,
        "persistent-workspaces": {
            "eDP-1": 5,
            "HDMI-A-1": 5
        }
    },
    "custom/systeminfo": {
        "format": "\udb82\udcc7",
        "tooltip": false,
        "on-click": "uwsm app -- hyprsysteminfo",
        "interval": "once"
    },
    "tray": {
        "spacing": 12
    },
    "group/storage": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 250,
            "children-class": "not-power",
            "transition-left-to-right": false
        },
        "modules": [
            "disk#root",
            "disk#storage"
        ]
    },
    "disk#root": {
        "path": "/",
        "interval": 30,
        "format": "  {percentage_used}%",
        "tooltip-format": "{used} of {total} ({free} free)"
    },
    "disk#storage": {
        "path": "/media/Storage",
        "interval": 30,
        "format": "  {percentage_used}%",
        "tooltip-format": "{used} of {total} ({free} free)"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}%  ",
        "format-icons": [
            " ",
            " ",
            " ",
            " ",
            " "
        ]
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                "",
                " "
            ]
        },
        "on-click": "pavucontrol"
    },
    "clock": {
        "format": "{:%a %d %b %H:%M}"
    },
    "custom/power": {
        "format": "\u23fb",
        "tooltip": false,
        "on-click": "uwsm app -- nwg-bar",
        "interval": "once"
    }
}
